<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:SmartNumericTextView="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <com.libs.customlibs.CustomRatingBar
        android:id="@+id/customRateBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        SmartNumericTextView:num_stars="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        SmartNumericTextView:text="hello world"
        SmartNumericTextView:valueRate="3" />


    <Button
        android:id="@+id/btnViewData"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Get Value"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/customRateBar"
        app:layout_constraintTop_toBottomOf="@id/customRateBar" />
</androidx.constraintlayout.widget.ConstraintLayout>