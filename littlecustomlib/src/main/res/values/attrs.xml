<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SmartNumericTextView">
        <attr name="textSize" format="dimension" />
        <attr name="valueRate" format="string" />
        <attr name="textColor" format="color|reference" />
        <attr name="fontType" format="string" />

        <attr name="secondaryTextColor" format="color|reference" />
        <attr name="text" format="string" />
        <attr name="textPercentage" format="integer" />
        <attr name="suffixSymbol" format="string" />
        <attr name="textStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="num_stars" format="integer"  />

    </declare-styleable>

    <declare-styleable name="customSpinner">
        <attr name="setImage" format="boolean" />
        <attr name="hideText" format="boolean" />
        <attr name="setArrowColor" format="color|reference" />
        <attr name="setArrowIcon" format="reference" />
        <attr name="defalutText" format="string" />
    </declare-styleable>
</resources>